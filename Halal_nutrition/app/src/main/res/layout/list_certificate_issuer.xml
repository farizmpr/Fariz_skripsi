<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layCertificateIssuer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="25dp"
    android:layout_marginTop="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/mtrl_list_item_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_certif" />

        <TextView
            android:id="@+id/certificateIssuerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_toEndOf="@id/mtrl_list_item_icon"
            android:fontFamily="@font/roboto_regular"
            android:maxLines="1"
            android:paddingStart="10dp"
            android:text="Halal Food Authority"
            android:textColor="@color/name_transprant"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/certificateIssuerED"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/certificateIssuerName"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="20dp"
            android:layout_toEndOf="@id/mtrl_list_item_icon"
            android:fontFamily="@font/roboto_regular"
            android:maxLines="2"
            android:paddingStart="10dp"
            android:text="Due Sep 10, 2022"
            android:textColor="@color/name_transprant"
            android:textSize="12dp" />
    </RelativeLayout>
</LinearLayout>