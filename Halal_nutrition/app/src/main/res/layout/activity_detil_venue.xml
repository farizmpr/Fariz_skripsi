<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="220dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:src="@drawable/splash6"
                    android:scaleType="centerCrop"/>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="220dp"
                    android:background="@android:color/black"
                    android:alpha="0.5"/>

                <LinearLayout
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/halal"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/back"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_back_white"
                            android:tint="@color/white"/>

                    </RelativeLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:textSize="20sp"
                        android:text="Dog haus"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/white"/>

                    <RelativeLayout
                        android:id="@+id/lnl_share"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2">

                        <ImageView
                            android:id="@+id/ic_favorite"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerInParent="true"
                            android:tint="@color/white"/>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_place_header"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:gravity="bottom"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/place_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="30dp">

                        <LinearLayout
                            android:layout_width="60dp"
                            android:layout_height="25dp"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/round_outline"
                                android:gravity="center">

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center">
                                    <androidx.appcompat.widget.AppCompatRatingBar
                                        android:id="@+id/place_rating"
                                        style="@style/Yellow.Small.AppCompatRatingBar"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:clickable="false"
                                        android:numStars="1"
                                        android:rating="3.5"
                                        android:stepSize="1"
                                        android:theme="@style/Yellow.Small.AppCompatRatingBar" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_centerHorizontal="true"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:fontFamily="@font/roboto_medium"
                                        android:layout_toRightOf="@+id/place_rating"
                                        android:text="4.3"/>
                                </RelativeLayout>

                            </RelativeLayout>

                        </LinearLayout>

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:orientation="vertical"
                            >

                            <RelativeLayout
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/round_outline"
                                android:gravity="center">

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_centerHorizontal="true"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/roboto_medium"
                                        android:textColor="@color/halal"
                                        android:text="OPEN"/>
                                </RelativeLayout>

                            </RelativeLayout>

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/place_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-20dp"
                android:background="@drawable/background_item">

                <!--<View-->
                <!--android:id="@+id/view1"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="1dp"-->
                <!--android:layout_marginTop="15dp"-->
                <!--android:background="@color/overlay_dark_10"/>-->

                <!--<View-->
                <!--android:id="@+id/view2"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="1dp"-->
                <!--android:layout_marginTop="15dp"-->
                <!--android:background="@color/overlay_dark_10"/>-->

                <LinearLayout
                    android:id="@+id/menu"
                    android:layout_marginTop="20sp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Dog Haus"
                        android:textSize="16sp"
                        android:textColor="@color/titleColor"
                        android:layout_marginLeft="10dp"
                        app:fontFamily="@font/roboto_medium" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/address"
                    android:layout_below="@id/menu"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="155 W 51st St, New York, NY 10019, USA"
                        android:textSize="14sp"
                        android:textColor="@color/grey_40"
                        android:layout_marginLeft="10dp"
                        app:fontFamily="@font/roboto_medium" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fitur"
                    android:layout_below="@id/address"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        >

                        <RelativeLayout
                            android:id="@+id/call"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/circle_call"
                            android:layout_marginLeft="10dp"
                            android:gravity="center">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/ic_call_black_24dp"
                                    android:tint="@color/white"/>
                            </RelativeLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:text="Call"
                                android:layout_marginLeft="10dp"
                                android:gravity="center"/>
                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        >

                        <RelativeLayout
                            android:id="@+id/location"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/circle_location"
                            android:layout_marginLeft="10dp"
                            android:gravity="center">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/ic_location_on_black_24dp"
                                    android:tint="@color/white"/>
                            </RelativeLayout>

                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Location"
                                android:layout_marginLeft="10dp"
                                android:gravity="center"/>
                        </RelativeLayout>

                    </LinearLayout>




                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dailyOpen"
                    android:layout_below="@id/fitur"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Open Now daily time 9:30 am to 11:00 pm"
                        android:textSize="16sp"
                        android:textColor="@color/grey_40"
                        android:layout_marginLeft="10dp"
                        app:fontFamily="@font/roboto_medium" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/featured"
                    android:layout_below="@id/dailyOpen"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Menu &amp; Photos"
                        android:textSize="16sp"
                        android:textColor="@color/titleColor"
                        android:layout_marginLeft="10dp"
                        app:fontFamily="@font/roboto_medium" />

                    <TextView
                        android:layout_width="0dp"
                        android:gravity="right"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="See all (5)"
                        android:textSize="16sp"
                        android:textColor="@color/grey_40"
                        android:layout_marginRight="10dp"
                        app:fontFamily="@font/roboto_medium" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/feature_recycler"
                    android:layout_height="160dp"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/featured"
                    tools:listitem="@layout/list_menuphotos"/>


            </RelativeLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>