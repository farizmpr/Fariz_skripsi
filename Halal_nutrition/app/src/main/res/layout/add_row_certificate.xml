<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="5dp">

        <TextView
            android:id="@+id/titleRowCertificate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Majelis Ulama Indonesia"
            android:textColor="#000000"
            android:textSize="16dp"
             />

        <TextView
            android:id="@+id/typeRowCertificate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Type : Product" />
        <TextView
            android:id="@+id/halalStatusRowCertificate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Halal Status : Development" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnEditCertificate"
                android:layout_width="95dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/transparent"
                android:text="Edit"
                app:strokeColor="@color/halal"
                app:strokeWidth="1dp"
                android:textAllCaps="false"
                android:stateListAnimator="@null"
                android:textColor="@color/halal"
                android:layout_marginRight="10dp"
                android:textSize="16dp"
                />
            <Button
                android:id="@+id/btnRemoveCertificate"
                android:layout_width="95dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/transparent"
                android:text="Remove"
                android:layout_marginRight="20dp"
                app:strokeColor="@color/halal"
                app:strokeWidth="1dp"
                android:textAllCaps="false"
                android:stateListAnimator="@null"
                android:textColor="@color/halal"
                android:textSize="14dp"
                />
        </LinearLayout>
    </LinearLayout>

