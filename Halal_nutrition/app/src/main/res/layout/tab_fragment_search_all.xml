<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/head_items_search_all"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/grey_10"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/head_items_search_all">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4">
            <TextView
                android:id="@+id/titleItemsSearchAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:paddingTop="14dp"
                android:paddingBottom="15dp"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center"
                android:text="Product"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/titleMenuBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="25dp"
            android:layout_weight="6"
            android:fontFamily="@font/fontsfreenetproximanovabold"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:textSize="20sp" />


        <RelativeLayout
            android:id="@+id/btnShowAllItems"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="end"
            android:layout_weight="4">
            <TextView
                android:id="@+id/titleNewsShowSearchAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingRight="20dp"
                android:paddingTop="14dp"
                android:paddingBottom="15dp"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center"
                android:text="Show All"
                android:textColor="@color/halal"
                android:textSize="14sp" />
        </RelativeLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_search_all_items"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        >


    </FrameLayout>
    <LinearLayout
        android:id="@+id/head_news_search_all"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/grey_10"
        android:layout_below="@+id/scrollViewListItems"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/head_items_search_all">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4">
            <TextView
                android:id="@+id/titleNewsSearchAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:paddingTop="14dp"
                android:paddingBottom="15dp"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center"
                android:text="News"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/titleNewsMenuBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="25dp"
            android:layout_weight="6"
            android:fontFamily="@font/fontsfreenetproximanovabold"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:textSize="20sp" />


        <RelativeLayout
            android:id="@+id/btnShowAllNews"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="end"
            android:layout_weight="4">
            <TextView
                android:id="@+id/titleItemsShowSearchAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingRight="20dp"
                android:paddingTop="14dp"
                android:paddingBottom="15dp"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center"
                android:text="Show All"
                android:textColor="@color/halal"
                android:textSize="14sp" />
        </RelativeLayout>

    </LinearLayout>
    <FrameLayout
        android:id="@+id/fragment_search_all_news"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        >


    </FrameLayout>
    <LinearLayout
        android:id="@+id/head_venues_search_all"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/grey_10"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/head_venues_search_all">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4">
            <TextView
                android:id="@+id/titleVenuesSearchAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:paddingTop="14dp"
                android:paddingBottom="15dp"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center"
                android:text="Restaurant"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/titleVenuesMenuBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="25dp"
            android:layout_weight="2"
            android:fontFamily="@font/fontsfreenetproximanovabold"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:textSize="20sp" />


        <RelativeLayout
            android:id="@+id/btnShowAllVenues"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="end"
            android:layout_weight="2.5">
            <TextView
                android:id="@+id/titleVenuesShowSearchAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingRight="20dp"
                android:paddingTop="14dp"
                android:paddingBottom="15dp"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center"
                android:text="Show All"
                android:textColor="@color/halal"
                android:textSize="14sp" />
        </RelativeLayout>

    </LinearLayout>
    <FrameLayout
        android:id="@+id/fragment_search_all_venues"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        >


    </FrameLayout>

</LinearLayout>