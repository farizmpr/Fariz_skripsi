<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
    <style name="Widget.BottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/roboto_regular</item>
    </style>
    <style name="DetailActivityTheme" parent="AppTheme">
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="Yellow.Small.AppCompatRatingBar" parent="Base.Widget.AppCompat.RatingBar.Small">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/yellow_600</item>
    </style>

    <style name="MyAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!--Status bar white with dark icons to initialize activity-->
    <style name="AppDarkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="EditTextThemeWhite" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="EditTextThemeObs" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/grey_10</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <!--style for ripple library-->
    <style name="RippleStyleWhite">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">#80FFFFFF</item>
        <item name="mrl_rippleHover">true</item>
        <item name="mrl_rippleAlpha">0.2</item>
    </style>
    <style name="SearchViewStyle" parent="Widget.AppCompat.Light.SearchView">
        <!-- Gets rid of the search icon -->
        <!-- Gets rid of the "underline" in the text -->
        <!-- Gets rid of the search icon when the SearchView is expanded -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:hint">@color/white</item>
        <!-- The hint text that appears when the user has not typed anything -->
        <item name="queryHint">Please Search Your Items</item>
    </style>

    <style name="SearchViewStyleBlack" parent="Widget.AppCompat.Light.SearchView">
        <!-- Gets rid of the search icon -->
        <!-- Gets rid of the "underline" in the text -->
        <!-- Gets rid of the search icon when the SearchView is expanded -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:hint">@color/black</item>
        <!-- The hint text that appears when the user has not typed anything -->
        <item name="queryHint">Please Search Your Items</item>
    </style>

    <style name="SearchViewStyleColorHalal" parent="Widget.AppCompat.Light.SearchView">
        <!-- Gets rid of the search icon -->
        <!-- Gets rid of the "underline" in the text -->
        <!-- Gets rid of the search icon when the SearchView is expanded -->
        <item name="android:textColorPrimary">@color/halal</item>
        <item name="android:textColorHint">@color/halal</item>
        <item name="android:hint">@color/halal</item>
        <!-- The hint text that appears when the user has not typed anything -->
        <item name="queryHint">Please Search Your Items</item>
    </style>
    <style name="MyToolbarThemeSearchAll"
        parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="colorControlNormal">@color/white</item>
        <item name="titleTextColor">@color/white</item>
    </style>
    <style name="Theme.MyApp" parent="Theme.AppCompat">

        <item name="scrimBackground">@color/mtrl_scrim_color</item>
        <item name="textAppearanceHeadline1">@style/TextAppearance.MaterialComponents.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.MaterialComponents.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.MaterialComponents.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.MaterialComponents.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.MaterialComponents.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.MaterialComponents.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.MaterialComponents.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.MaterialComponents.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.MaterialComponents.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.MaterialComponents.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.MaterialComponents.Caption</item>
        <item name="textAppearanceButton">@style/TextAppearance.MaterialComponents.Button</item>
        <item name="textAppearanceOverline">@style/TextAppearance.MaterialComponents.Overline</item>

    </style>
    <style name="allLeftRadiusBtn">
        <item name="cornerSizeTopLeft">13dp</item>
        <item name="cornerSizeBottomLeft">13dp</item>
    </style>
    <style name="allRightRadiusBtn">
        <item name="cornerSizeTopRight">13dp</item>
        <item name="cornerSizeBottomRight">13dp</item>

    </style>
    <style name="ShapeAppearanceOverlay.MyApp.Button.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="ShapeAppearanceOverlay.MyApp.Button.Icon" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="AppTheme.RoundedCornerMaterialButton" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/halal</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">36dp</item>
        
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="backgroundTint">@color/halal</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="AppTheme.RoundedCornerOutlineMaterialButton" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/halal</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">36dp</item>
        <item name="strokeColor">@color/halal</item>
        <item name="strokeWidth">2dp</item>
        
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="backgroundTint">@color/transparent</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
